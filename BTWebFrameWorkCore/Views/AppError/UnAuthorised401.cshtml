
@{
    ViewData["PageTitle"] = "UnAuthorised";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}


<div class="card">
    <div class="card-body login-card-body">
        <p class="login-box-msg" style="font-size:x-large;font-weight:bolder;">Access Denied</p>

        <div>
            <h2 class="headline text-warning" style="text-align:center;"> <i class="fas fa-user-times text-warning"></i> </h2>

            <div class="error-content">
                <h3 style="text-align:center;"><i class="fas fa-exclamation-triangle text-warning"></i> Oops! Unauthorised User.</h3>

                <div class="text-center">
                    Your access is restricted. You are not authorised to access this page.
                </div>

                <div class="text-center" style="margin-top:25px;">
                    <button onclick="location.href='@Url.Action("Dashboard", "Account")'" class="btn btn-success"><i class="fa fa-home"></i> Go To Home</button>
                </div>
            </div>
            <!-- /.error-content -->
        </div>
    </div>
    <!-- /.login-card-body -->
</div>


