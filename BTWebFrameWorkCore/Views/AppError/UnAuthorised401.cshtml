
@{
    ViewData["PageTitle"] = "UnAuthorised";    
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<div class="hold-transition login-page">
    <div class="login-box" style="width:auto;">
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg" style="font-size:x-large;font-weight:bolder;">Access Denied</p>

                <div>
                    <h2 class="headline text-warning" style="text-align:center;"> 401</h2>

                    <div class="error-content">
                        <h3 style="text-align:center;"><i class="fas fa-exclamation-triangle text-warning"></i> Oops! Unauthorised User.</h3>

                        <p>
                            Your access is restricted. You are not authorised to access this page.
                        </p>

                        <div class="text-center">
                            <button onclick='/Account/Dashboard' class="btn btn-success"><i class="fa fa-home"></i> Go To Home</button>
                        </div>                        
                    </div>
                    <!-- /.error-content -->
                </div>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
</div>
    
    