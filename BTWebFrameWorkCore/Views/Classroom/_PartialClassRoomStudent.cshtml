@using AppModel.ViewModel
@model List<ClassMemberInfo>

<ul class="products-list product-list-in-card pl-2 pr-2">
    @foreach (var item in Model)
    {
        <li class="item">
            <div class="product-img">
                <img src="@Url.Content(item.Avatar)" class="img-size-50" alt="Student Avatar">
            </div>
            <div class="product-info">
                <a href="javascript:void(0)" class="product-title">
                    @item.Name
                    <span class="badge badge-warning float-right" title="Delete" onclick="onDeleteAssignStudent('@item.RegNo')"><i class="fa fa-trash"></i></span>
                </a>
                <span class="product-description">
                    @item.Description
                </span>
            </div>
        </li>
    }
</ul>